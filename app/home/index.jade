main.ui.container.grid
  .row
    .column
      .ui.message.promo
        h1.ui.header PML Tree Query
        p Tool for searching and browsing treebanks online
        p
          a.large.ui.blue.button(ui-sref="browse")
            i.icon.tree
            |  Browse Treebanks
          button.large.ui.green.button(type="button" ng-show="!vm.auth.loggedIn" login)
            i.sign.in.icon
            |  Login
          a.large.ui.green.button(ng-show="vm.auth.user.isAdmin" href="admin.html")
            i.database.icon
            |  Administration
          button.large.ui.olive.button(ng-show="vm.auth.loggedIn" logout)
            i.sign.out.icon
            |  Logout
          a.large.ui.teal.button(href="http://ufal.mff.cuni.cz/pmltq/doc/pmltq_tutorial_web_client.html", target="_blank")
            i.icon.book
            |  Tutorial

          //a.large.ui.orange.disabled.button(href="#")
          //  i.info.circle.icon
          //  |  Guided Tour
          //a.large.ui.teal.disabled.button(href="#")
          //  i.icon.help
          //  |  Help
  .row
    .column
      .ui.two.column.grid
        .column
          h2.header Recently Used
          .ui.divided.items(ng-if="vm.recentlyUsed.length > 0")
            div(treebank-list-item="tb" ng-repeat="tb in ::vm.recentlyUsed track by tb.id")
          .ui.info.message(ng-if="vm.recentlyUsed.length == 0")
            .header No recent treebanks
            | You will find recently used treebanks here.
        .column
          h2.header Featured Treebanks
          .ui.divided.items(ng-if="vm.featured.length > 0")
            div(treebank-list-item="tb" ng-repeat="tb in ::vm.featured track by tb.id")
          .ui.info.message(ng-if="vm.featured.length == 0")
            .header No featured treebanks
            | We have found no available featured treebanks.
