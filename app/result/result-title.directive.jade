.ui.equal.width.middle.aligned.grid
  .left.aligned.column
    button.ui.small.icon.button(
      type="button"
      ng-click="result.tree = result.svg.tree().current - 1"
      ng-disabled="result.svg.tree().current <= 1"
      )
      i.angle.double.left.icon
  .ten.wide.center.aligned.column(title="{{result.svg.title()}}" data-position="top center" data-variation="basic wide" ui-popup)
    .position
      span(ng-bind="result.svg.tree().current")
      = ' / '
      span(ng-bind="result.svg.tree().total")
    .filename(ng-bind="result.svg.title()")
  .right.aligned.column
    button.ui.small.icon.button(
      type="button"
      ng-click="result.tree = result.svg.tree().current + 1"
      ng-disabled="result.svg.tree().current >= result.svg.tree().total"
      )
      i.angle.double.right.icon
