form.ui.form(name="form" ng-class="{collapsed: collapsed}")
  .stackable.ui.grid
    .column(ng-hide="collapsed")
      .ui.horizontal.list
        .item
          button.ui.compact.mini.icon.button(type="button" ng-click="collapsed = true")
            i.chevron.down.icon
    .right.aligned.fifteen.wide.column(ng-hide="collapsed")
      .ui.horizontal.list
        .item
          .content.aligned
            .ui.inline.dropdown(ui-dropdown="timeoutSelect" title="Timeout" ng-model="params.timeout")
        .item
          .content.aligned
            .ui.inline.dropdown(ui-dropdown="limitSelect" title="Result limit" ng-model="params.limit")
    .sixteen.wide.column(ng-show="collapsed")
        pre.query.text(ng-show="collapsed" ng-bind="params.query" ng-click="collapsed = false")

    //- a.horizontally.fitted.item
    //-   i.angle.double.left.icon
    //- .horizontally.fitted.text.item Query (1/3)
    //- a.horizontally.fitted.item
    //-   i.angle.double.right.icon
    //- .item
    //-   a.ui.basic.button
    //-     i.file.outline.icon
    //-     | New
  .field(ng-hide="collapsed")
    textarea.text.mono(
      name="query"
      spellcheck="false"
      focus-element
      id="query-text"
      ng-model="params.query"
      required="required"
      rows="8"
      tabindex="1"
      placeholder="# Enter your query here"
      accesskey="e")
  .field
    .two.column.ui.grid
      .left.aligned.column
        button.ui.primary.button(
          ng-class="{small: !collapsed, mini: collapsed}"
          type="button"
          bs-tooltip
          data-title="Execute the query (including output filters)"
          data-placement="bottom"
          tabindex="2"
          disabled=true
          ng-disabled="form.$invalid"
          ng-click="submit(params)")
          i.search.icon
          | Execute query
        button.ui.submit.button(
          ng-class="{small: !collapsed, mini: collapsed}"
          type="button"
          bs-tooltip
          data-title="Execute the query, excluding possible output filters"
          data-placement="bottom"
          tabindex="3"
          disabled=true
          ng-disabled="form.$invalid")
          i.filter.icon
          | w/o Filters
        button.ui.submit.button(
          ng-if="result"
          ng-class="{small: !collapsed, mini: collapsed}"
          type="button"
          bs-tooltip
          data-title="Suggest query based on nodes marked by you"
          data-placement="bottom"
          tabindex="4"
          disabled=true
          ng-disabled="!result.svg.marked.any()")
          i.code.icon
          | Suggest
          span(ng-show="result.svg.marked.any()")
            |  ({{result.svg.marked.count()}})
      .right.aligned.column(ng-hide="collapsed")
        button.ui.small.basic.button(
          type="button"
          bs-tooltip
          data-title="Empty the query form"
          data-placement="bottom"
          tabindex="6"
          ng-click="params.query=''")
          i.cut.icon
          | Clear
